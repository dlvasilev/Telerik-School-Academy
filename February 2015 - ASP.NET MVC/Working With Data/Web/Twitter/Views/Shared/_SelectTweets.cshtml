@model IEnumerable<Twitter.Data.Models.Tweet>

@foreach (var tweet in Model)
{
    <div class="list-group">
        <a href="#" class="list-group-item">
            <h4 class="list-group-item-heading">@tweet.Author.ToString().Substring(0, tweet.Author.ToString().IndexOf("@"))</h4>
            <p class="list-group-item-text">@tweet.Text</p>
            <p class="list-group-item-text text-right">@tweet.PostedOn</p>
        </a>
    </div>
}