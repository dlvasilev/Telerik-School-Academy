@model IEnumerable<MoviesApp.Models.Actor>

@{
    ViewBag.Title = "Index";
}

<h2>Actors</h2>

@Ajax.ActionLink("Create", "Create", null, new AjaxOptions
{
    UpdateTargetId = "AjaxBlock",
    InsertionMode = InsertionMode.Replace
}, new { @class = "btn btn-primary" })

<br /><br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsMale)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMale)
            </td>
            <td>
                @Ajax.ActionLink("Edit", "Edit", new { id = item.ActorId }, new AjaxOptions
                {
                    UpdateTargetId = "AjaxBlock",
                    InsertionMode = InsertionMode.Replace
                }) |
                @Ajax.ActionLink("Details", "Details", new { id = item.ActorId }, new AjaxOptions
                {
                    UpdateTargetId = "AjaxBlock",
                    InsertionMode = InsertionMode.Replace
                }) |
                @Ajax.ActionLink("Delete", "Delete", new { id = item.ActorId }, new AjaxOptions
                {
                    UpdateTargetId = "AjaxBlock",
                    InsertionMode = InsertionMode.Replace
                })
            </td>
        </tr>
    }
</table>

<div id="AjaxBlock"></div>